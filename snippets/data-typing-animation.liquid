<script>
document.addEventListener('DOMContentLoaded', function() {
    const typewriterEffect = (element, speed = 150) => {
        const text = element.textContent;
        let i = 0;
        element.textContent = '';
        const typing = setInterval(() => {
            if (i < text.length) {
                element.textContent += text.charAt(i);
                i++;
            } else {
                clearInterval(typing);
            }
        }, speed);
    };

    // Set up an Intersection Observer to trigger the typewriter effect when elements with data-typewriter come into view
    const observer = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                typewriterEffect(entry.target); // Apply the typewriter effect
                observer.unobserve(entry.target); // Stop observing the target once animated
            }
        });
    }, {
        rootMargin: '0px',
        threshold: 0.5 // Adjust this value based on when you want the animation to start
    });

    // Observe all elements with data-typewriter attribute
    document.querySelectorAll('[data-typewriter="true"]').forEach(element => {
        observer.observe(element);
    });
});
</script>
