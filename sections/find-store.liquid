{%- style -%}
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    }
{%- endstyle -%}



<div class="relative bg-cover bg-center monsterrat" style="background-image: url('{{ 'header.jpg' | asset_url }}'); height: 70vh; margin-top:3rem;">
    <div class="section-{{ section.id }}-padding" >
        <div class="relative flex flex-col items-center justify-center h-full text-white" style="margin-top:12rem;">
            <h2 class="visit-text font-extrabold text-pink-500 transform text-left mb-4">
                VISIT US IN STORE
            </h2>
            <div class="relative z-10">
                {% include 'custom-button', url: '/your-order-page-url', text: 'FIND A STORE' %}
            </div>
        </div>
    </div>

</div>
{%style%}
    .visit-text{
        font-size: 4.5rem
    }
{%endstyle%}

{% schema %}
{
  "name": "Find Store",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Find Store"
    }
  ]
}
{% endschema %}