
{%- style -%}
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    }
{%- endstyle -%}




<div class="monsterrat">
    <div class="section-{{ section.id }}-padding">
        <div class="flex flex-col items-center">
            <div class=" w-full text-center	px-10" >
                <h1 class="px-8 md:px-64 py-6 bg-red-600 text-white font-extrabold text-4xl md:text-6xl">GIFT LIKE A CHAMP!</h1>
            </div>
            <p class="font-bold mt-12 mb-12 text-2xl md:text-3xl">The new age of gifting</p>
        </div>

            <div class="carousel-container">
              <div class="carousel-track">
                  {% for product in collections.all.products limit: 6 %}
                  <div class="carousel-item">
                    {% include 'custom-product-card', img: product.featured_image, text: product.title, price: product.price %}

                  </div>
                  {% endfor %}
              </div>
            </div>


          
    </div>

</div>


{% style  %}
.carousel-container {
    display: flex;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-behavior: smooth;
    scrollbar-width: none; 
}

.carousel-container::-webkit-scrollbar {
    display: none; 
}

.carousel-track {
    display: flex;
    padding: 5px;
    margin-left: 1.5rem;
}

.carousel-item {
    width: 300px; 
    margin-right: 3rem;
}
