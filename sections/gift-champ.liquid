.custom-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 40px;
  padding: 6rem;
  text-align: center;
}

/* Medium screens (>=640px) */
@media (min-width: 640px) {
  .custom-grid {
    grid-template-columns: repeat(2, 1fr); /* 2 columns */
  }
  .carousel-track {
    margin-left: 5rem;
  }

}

/* Large screens (>=1024px) */
@media (min-width: 1200px) {
  .custom-grid {
    grid-template-columns: repeat(4, 1fr); /* 4 columns */
  }
  .carousel-track {
    margin-left: 5rem;
  }

}

{% endstyle %}

{% schema %}
{
  "name": "Gift Champ",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Gift Champ"
    }
  ]
}
{% endschema %}