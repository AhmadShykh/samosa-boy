{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{%- endstyle -%}



<div class="monsterrat  bg-pink-500 m-12">
    <div class="flex flex-col md:flex-row section-{{ section.id }}-padding">

        <div class="md:w-1/2">
            <img class="w-2/3 ml-24 mt-20" src="{{ 'header.jpg' | asset_url }}" alt="news">
        </div>
        <div class="md:w-1/2 p-16 mt-8">
            <h1 class="font-extrabold news-text ">NEWS STRAIGHT FROM THE OVEN</h1>
            <p class="text-4xl font-medium">Sign up to our mailing list and get all the news and updates.</p>
           <div class="flex flex-col">
                <div class="flex flex-row gap-4 mb-4 mt-24">
                    <input class="w-1/2 bg-pink-500 placeholder-black border border-black rounded-3xl p-4" type="text" placeholder="Enter text here">
                    <input class="w-1/2 bg-pink-500 placeholder-black border border-black rounded-3xl p-4" type="text" placeholder="Enter text here">
                </div>
                <input class="w-full bg-pink-500 placeholder-black border border-black rounded-3xl p-4 my-4" type="text" placeholder="Enter text here">

                <a href="#" class="custom-button font-black rounded-3xl bg-yellow-100 border border-black text-black px-4 py-4 hover:bg-yellow-500 mt-8">SIGN UP</a>

           </div>
        </div>
    </div>
</div>
{%style%}
    .news-text{
        font-size: 3.5rem;
    }
    .custom-button{
        text-align: center;
    }
{%endstyle%}

{% schema %}
{
  "name": "News",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "News"
    }
  ]
}
{% endschema %}