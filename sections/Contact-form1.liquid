{% schema %}
{
  "name": "Contact Form 1",
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "Contact Form 1"
    }
  ]
}
{% endschema %}
<div class="text-center mt-5">
  <h2 class="monsterrat text-6xl font-black">CONTACT</h2>
  <p style="font-size: 14px; color: #555; margin-bottom: 20px;">
    Get in touch. I love getting emails and stuff, they make me feel great about myself.
  </p>
</div>
<div
  class="contact-section"
  style="display: flex; padding: 0 20px; background-color: white; flex-wrap: wrap; align-items: stretch;"
>
  <!-- Right Side (Form) -->
  <div
    class="contact-form"
    style="
      flex: 1;




      display: flex;
      flex-direction: column;
    "
  >
    {%- form 'contact', id: 'ContactForm', class: 'contact-form monsterrat text-3xl font-black' -%}
      {%- if form.posted_successfully? -%}
        <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
          {{- 'icon-success.svg' | inline_asset_content -}}
          {{ 'templates.contact.form.post_success' | t }}
        </h2>
      {%- elsif form.errors -%}
        <div class="form__message">
          <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
            {{- 'icon-error.svg' | inline_asset_content -}}
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
        </div>
        <ul class="form-status-list caption-large" role="list">
          <li>
            <a href="#ContactForm-email" class="link">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
            </a>
          </li>
        </ul>
      {%- endif -%}
      <!-- Name Field -->
      <div class="field my-5 ">
        <input
          type="text"
          name="contact[name]"
          placeholder="Name"
          class="border p-5 m-2 field__input"
          required
        >
        <label class="field__label" for="contact_name">Name</label>
      </div>

      <!-- Email Field -->
      <div class="field field--with-error my-5">
        <input
          type="email"
          name="contact[email]"
          placeholder="Email"
          class="border p-5 field__input"
          required
          id="contact_email"
          aria-required="true"
        >
        <label class="field__label" for="contact_email">Email</label>
        <small class="contact__field-error visually-hidden" id="ContactForm-email-error">
          <span class="svg-wrapper">
            {{ 'icon-error.svg' | inline_asset_content }}
          </span>
          Invalid email address
        </small>
      </div>

      <!-- Order Number Field -->
      <div class="field my-5">
        <input
          type="text"
          name="contact[order_number]"
          placeholder="Order Number (if applicable)"
          class="border p-5 field__input"
        >
        <label class="field__label" for="contact_order_number">Order Number</label>
      </div>

      <!-- Comment Field -->
      <div class="field my-5">
        <textarea
          name="contact[body]"
          placeholder="Comment"
          class="border p-5 text-area field__input"
          rows="6"
          id="contact_body"
        ></textarea>
        <label class="field__label" for="contact_body">Comment</label>
      </div>

      <!-- Submit Button -->
      <div class="contact__button">
        <button
          type="submit"
          class="btn"
        >
          SEND
        </button>
      </div>
    {%- endform -%}
  </div>
</div>

<style>
          /* Responsive Design */
          .contact-section {
            display: flex;
            padding:0 20px;
            background: url('https://cdn.shopify.com/s/files/1/0901/2340/3544/files/3.png?v=1735906617') no-repeat center center;
        background-size: contain;
       background-size: 1000px 850px;

    height:80vh;
  min-height:850px;



          }

          .contact-form {
            flex: 1;
            display: flex;
            flex-direction: column;
            width:450px;
               align-items: center;
        justify-content: center;
            margin-top:120px;
          }

          .field {
            margin: 10px 0px;
            border-radius: 6px;
          }

          @media (max-width: 768px) {
            .contact-section {
              flex-direction: column;
              background-size: 100% auto;
            }

            .contact-form {
              flex: none;
              width: 95%;
              height: auto; /* Default to auto height on smaller screens */
            }

          }

          @media (max-width: 480px) {
            .contact-form h2 {
              font-size: 20px;
            }

            .contact-form p {
              font-size: 12px;
            }

            .contact-form button {
              font-size: 14px;
            }
          }
      .btn {
        position: relative;
        display: inline-block;
        padding: 1rem 2rem;
        background-color: yellow;
        color: black;
        border-radius: 6px;
        width:100%;
        text-decoration: none;
        transition: 0.5s transform ease-in-out, 0.5s color ease-in-out;
        will-change: transform, color;
        z-index: 0;
        overflow: hidden; /* Ensures the pseudo-element doesn't overflow the button */
      }

      .btn::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%; /* Starts completely outside the button's visible area */
        width: 100%;
        height: 100%;
        background-color: black;
        border-radius: 6px;
        transform: translate(0, 0) rotate(10deg); /* Ensures no overflow outside the button */
        transform-origin: top left;
        transition: 0.6s transform ease-out;
        will-change: transform;
        z-index: -1;
      }

      .btn:hover::after {
        left: 0; /* Moves the pseudo-element into the button's area */
      }

      .btn:hover {
        color: yellow;
        background-color: black;
        transform: scale(1.05);
        will-change: transform;
      }
</style>
