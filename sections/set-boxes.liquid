
{%- style -%}
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    }
{%- endstyle -%}

{% include 'data-typing-animation' %}


<div class="monsterrat bg-pink-400">
    <div class="section-{{ section.id }}-padding">
       <div class="flex flex-col items-center mb-12">
        <div class="mt-8 w-full text-center	px-10" >
            <h1 data-typewriter="true" class="px-8 md:px-64 py-10 bg-red-600 text-white font-extrabold text-4xl md:text-7xl">SET BOXES</h1>
        </div>
       </div>

       <div class="carousel-container">
              <div class="carousel-track">
                  {% for product in collections.all.products limit: 6 %}
                  <div class="carousel-item">
                    {% include 'custom-product-card', img: product.featured_image, text: product.title, price: product.price, howitworks: true %}

                  </div>
                  {% endfor %}
              </div>
        </div>

    </div>
</div>

{% style  %}
.custom-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 40px;
  text-align: center;
  
}
.carousel-track {
    display: flex;
    position: relative; /* Ensure positioning is set */
    width: max-content; /* This ensures the track can expand as needed */
    padding: 20px;
}
/* Medium screens (>=640px) */
@media (min-width: 640px) {
  .custom-grid {
    grid-template-columns: repeat(2, 1fr); /* 2 columns */
  }
}

/* Large screens (>=1024px) */
@media (min-width: 1200px) {
  .custom-grid {
    grid-template-columns: repeat(4, 1fr); /* 4 columns */
  }
}

{% endstyle %}

{% schema %}
{
  "name": "Set Boxes",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Set Boxes"
    }
  ]
}
{% endschema %}

<script>
document.addEventListener('DOMContentLoaded', function() {
    const container = document.querySelector(".carousel-container");
    let isDragging = false;
    let startX;
    let scrollStartX;

    container.addEventListener('mousedown', (e) => {
        isDragging = true;
        startX = e.pageX;
        scrollStartX = container.scrollLeft;
        container.style.cursor = "grabbing"; 
        e.preventDefault(); 
    });

    document.addEventListener('mouseup', () => {
        if (isDragging) {
            container.style.cursor = "grab"; 
            isDragging = false; 
        }
    });

    document.addEventListener('mousemove', (e) => {
        if (!isDragging) return; 
        e.preventDefault(); 

        const currentX = e.pageX;
        const dx = (currentX - startX) * 2; 
        container.scrollLeft = scrollStartX - dx; 
    });
});
</script>
